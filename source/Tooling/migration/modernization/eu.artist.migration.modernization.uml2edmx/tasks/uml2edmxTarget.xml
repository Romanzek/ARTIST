<?xml version="1.0" encoding="UTF-8"?>

<!-- Place this file in the target project and call it with "External Tools > Run As > Ant Build" -->
<!-- You have to change the MODEL and the TARGET values -->

<project basedir="." default="uml2edmxSample" name="eu.artist.migration.modernization.uml2edmxSample">
	<import file="../../eu.artist.migration.modernization.uml2edmx/tasks/uml2edmx.xml"/>

    <!-- Change the values of MODEL and TARGET to point to your model and output folder -->
	<property name="MODEL" value="${basedir}/model/file.xmi"/>
	<property name="TARGET" value="${basedir}/src-gen"/>

	<target name="uml2edmxSample" description="Generate files in 'TARGET'">
		<antcall target="uml2edmx" >
			<param name="model" value="${MODEL}"/>
			<param name="target" value="${TARGET}"/>
		</antcall>
	</target>
</project>
