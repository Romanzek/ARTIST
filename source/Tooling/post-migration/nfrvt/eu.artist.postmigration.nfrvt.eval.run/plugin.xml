<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="eu.artist.postmigration.nfrvt.eval.run.launch.GMLLaunchDelegate"
            id="eu.artist.postmigration.nfrvt.eval.run.launchConfigurationType "
            modes="run"
            name="GML Evaluation"
            public="true">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.core.processFactories">
      <processFactory
            class="eu.artist.postmigration.nfrvt.eval.run.process.GMLProcessFactory"
            id="eu.artist.postmigration.nfrvt.eval.run.process.processFactory">
      </processFactory>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
          <launchConfigurationTabGroup
            class="eu.artist.postmigration.nfrvt.eval.run.ui.launch.GMLLaunchConfigurationTabGroup"
            id="eu.artist.postmigration.nfrvt.eval.run.ui.launchConfigurationTabGroup"
            type="eu.artist.postmigration.nfrvt.eval.run.launchConfigurationType ">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="eu.artist.postmigration.nfrvt.eval.run.launchConfigurationType "
            icon="icons/GMLLaunch.png"
            id="eu.artist.postmigration.nfrvt.eval.run.ui.launchConfigurationTypeImage">
      </launchConfigurationTypeImage>
   </extension>
     <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.artist.postmigration.nfrvt.eval.run.handler.EvaluateGMLHandler"
            commandId="eu.artist.postmigration.nfrvt.eval.GML.evaluate">
        <activeWhen>
         <reference
                    definitionId="eu.artist.postmigration.nfrvt.lang.gml.GML.Editor.opened">
                </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
         <command
            description="Trigger Migration Evaluation from GML"
            id="eu.artist.postmigration.nfrvt.eval.GML.evaluate"
            name="Evaluate Goals">
      </command>
   </extension>
