<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	 xmlns:p="http://primefaces.org/ui" >
	 
	 
	  <h:head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <style type="text/css">

		body {
        	background-color: #ffffff;
        	font-family: arial, helvetica, sans-serif;
        	font-size: 10pt;
        	margin-left: 0px;
        	margin-right: 0px;
       	 	margin-top: 0px;
        	margin-bottom: 0px;
        	text-decoration: none;
        	}

		</style>
		
		<script type="text/javascript">
			function configureMPT() {
	        	var q = document.getElementById("dropdownlist");
	        	var selected = q.options[q.selectedIndex].value;
	        	
	            document.location.href="confmpt?selected=" + selected;

	        	//alert("ARTIST Methodology has been configured using " + selected + ".");
	    	}		
		</script>
	
		
    </h:head>
 
    <h:body> 
    
                <h4> Available MAT reports</h4>
    
    
        <h:form id="myForm">
      
                     <p:growl id="messages" showDetail="true" /> 
      
      
      <h:selectOneMenu value="#{listFileHandlerBean.selectedFile}" >
      <f:selectItems value="#{listFileHandlerBean.matFiles}" /> </h:selectOneMenu>
  <h:commandButton id='button1' rendered="#{loginBean.defaultProjectExists}" value="Configure methodology with MAT report" update="myForm messages" type="submit" disabled="#{!listFileHandlerBean.matFileExists}" action="#{listFileHandlerBean.save()}" />
                    <input type="hidden" name="button" value="mat" />
                    <h:outputText value="Choose default Project" rendered="#{!loginBean.defaultProjectExists}"/>
     
     
      </h:form>
      
              <h:form id="myForm2">
      
       <h4> Available TFT reports</h4>
      
      <h:selectOneMenu value="#{listFileHandlerBean.selectedFile}" >
      <f:selectItems value="#{listFileHandlerBean.tftFiles}" /> </h:selectOneMenu>
  <h:commandButton id='button2' rendered="#{loginBean.defaultProjectExists}" value="Configure methodology with TFT report" update="myForm messages" type="submit" disabled="#{!listFileHandlerBean.tftfileExists}" action="#{listFileHandlerBean.save()}" />
                     <input type="hidden" name="button" value="tft" />
                     <h:outputText value="Choose default Project" rendered="#{!loginBean.defaultProjectExists}"/>
      
      </h:form>
      
              <h:form id="myForm3">
      
       <h4> Available BFT reports</h4>
      
      <h:selectOneMenu value="#{listFileHandlerBean.selectedFile}" >
      <f:selectItems value="#{listFileHandlerBean.bftFiles}" /> </h:selectOneMenu>
  <h:commandButton id='button3' rendered="#{loginBean.defaultProjectExists}" value="Configure methodology with BFT report" update="myForm messages" type="submit" disabled="#{!listFileHandlerBean.bftFileExists}" action="#{listFileHandlerBean.save()}" />
                     <input type="hidden" name="button" value="bft" />
                     <h:outputText value="Choose default Project" rendered="#{!loginBean.defaultProjectExists}"/>
      
      
      </h:form>
      
      <h:form id="myForm4">
      
       <h4> Available MIG reports</h4>
      
      <h:selectOneMenu value="#{listFileHandlerBean.selectedFile}" >
      <f:selectItems value="#{listFileHandlerBean.migFiles}" /> </h:selectOneMenu>
  <h:commandButton id='button4' rendered="#{loginBean.defaultProjectExists}" value="Configure methodology with MIG report" update="myForm messages" type="submit" disabled="#{!listFileHandlerBean.migFileExists}" action="#{listFileHandlerBean.save()}" />
                     <input type="hidden" name="button" value="mig" />
                     <h:outputText value="Choose default Project" rendered="#{!loginBean.defaultProjectExists}"/>
      
      
      </h:form>
      
      
    
   
    </h:body>

</html>